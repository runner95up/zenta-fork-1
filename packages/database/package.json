{
  "name": "@repo/database",
  "version": "1.0.0",
  "exports": {
    ".": "./src/client.ts"
  },
  "scripts": {
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx src/seed.ts",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Prisma\" -c \"cyan,magenta\" \"bun run ts:watch\" \"bun run studio\"",
    "ts:watch": "tsup ./src/client.ts --watch",
    "format": "prisma format",
    "generate": "prisma generate",
    "lint": "eslint . --max-warnings 0",
    "prebuild": "bun run generate",
    "predev": "bun run generate",
    "studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prisma": "^5.10.2",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
